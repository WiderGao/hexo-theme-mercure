<% if(theme.sidebar.show_toc && is_post() && page.toc != false) { %>
<div class="sidebar-content sticky">
    <app-tabs class="tabs" stretch active-tab="1">
        <app-tab-item>
            <div slot="label">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="16" height="16" fill="currentColor"><path d="M19 21H5a1 1 0 0 1-1-1v-9H1l10.327-9.388a1 1 0 0 1 1.346 0L23 11h-3v9a1 1 0 0 1-1 1zM6 19h12V9.157l-6-5.454-6 5.454V19z"/></svg>
                <span>&nbsp;概览</span>
            </div>
            <% if((typeof show_profile === 'undefined') ? theme.sidebar.show_profile : show_profile) { %>
                <div class="widget"><%- partial('../_widget/profile') %></div>
            <% } %> 
            <% if((typeof show_tag_cloud === 'undefined') ? theme.sidebar.show_category_tree : show_tag_cloud) { %>
                <div class="widget"><%- partial('../_widget/tag_cloud',{maxCount: 30}) %></div>
            <% } %> 
            <% if((typeof show_category_tree === 'undefined') ? theme.sidebar.show_category_tree : show_category_tree) { %>
                <div class="widget"><%- partial('../_widget/category_tree',{maxDepth: Infinity}) %></div>
            <% } %>
        </app-tab-item>
        <app-tab-item>
            <div slot="label">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="16" height="16" fill="currentColor"><path d="M20 22H4a1 1 0 0 1-1-1V3a1 1 0 0 1 1-1h16a1 1 0 0 1 1 1v18a1 1 0 0 1-1 1zm-1-2V4H5v16h14zM8 7h8v2H8V7zm0 4h8v2H8v-2zm0 4h8v2H8v-2z"/></svg>
                <span>&nbsp;目录</span>
            </div>
            <div class="widget"><%- partial('../_widget/toc_view') %></div>
        </app-tab-item>
    </app-tabs>
</div>
<% } else { %>
<div class="sidebar-content">
    <% if((typeof show_profile === 'undefined') ? theme.sidebar.show_profile : show_profile) { %>
        <div class="widget"><%- partial('../_widget/profile') %></div>
    <% } %> 
    <% if((typeof show_tag_cloud === 'undefined') ? theme.sidebar.show_category_tree : show_tag_cloud) { %>
        <div class="widget"><%- partial('../_widget/tag_cloud',{maxCount: 30}) %></div>
    <% } %> 
    <% if((typeof show_category_tree === 'undefined') ? theme.sidebar.show_category_tree : show_category_tree) { %>
        <div class="widget"><%- partial('../_widget/category_tree',{maxDepth: Infinity}) %></div>
    <% } %>
</div>
<% } %> 