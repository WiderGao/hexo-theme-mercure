<div class="tag-list">
<% orderTagsByPinyin(site.tags.toArray()).forEach((part)=>{ %>
<% if(part.tags.length>0) { %> 
    <h2 class="title"><%= part.key %></h2>
    <div class="tags">
    <% part.tags.forEach((tag)=>{ %> 
        <a class="tag" href="<%= url_for(tag.path) %>">
            <i class="ri-hashtag"></i>
            <span class="tag-name"><%= tag.name %></span>
            <span class="tag-count"><%= tag.length %></span>
        </a>
    <% }) %>
    </div>
<% } %>
<% }) %>
</div>
